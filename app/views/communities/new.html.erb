<div class="top-wrapper">
  <div class="users-new-container">
    <h1 class="text-black text-center mt-auto">サイト名</h1>
    <h4 class="text-black text-center">コミュニティ開設</h4>
    <div class="row">
      <div class="mt-4 offset-xl-3 offset-lg-3 offset-md-3 offset-2 col-xl-6 col-lg-6 col-md-6 col-8">
        <%= form_for(@community, html: { name: "selbox" }) do |f| %>
          <div class="form-group">
            <%= f.label "コミュニティ名*", class: "label-text" %>
            <%= f.text_field :communityName, class: "form-control", id: "communityName", placeholder: "例：F.L.Tクラブ" %>
          </div>
          <div class="form-group">
            <%= f.label "カテゴリーを選択*", class: "label-text" %>
            <div class="input-group mb-3">
              <%= f.select :category, [["運動・スポーツ・アウトドア", 1], ["文化", 2], ["営利団体", 3], ["非営利団体・公共団体", 4], ["その他", 5]],
                { :prompt => "---" }, { class: "custom-select", id: "categorySelect", onchange: "categorySet()" } %>
            </div>
          </div>
          <div class="form-group" id="form-group">
            <%= f.label "サブカテゴリーを選択*", class: "label-text" %>
            <div class="input-group mb-3">
              <%= f.select :subcategory, [], { :prompt => "---" }, { class: "custom-select text-charcoal", id: "subcategorySelect"} %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "都道府県を選択（主な活動場所、拠点など）*", class: "label-text" %>
            <div class="input-group">
              <%= f.select :prefecture, Prefecture.all.map{ |prefecture| [prefecture.name] }, { :prompt => "---" }, { class: "custom-select text-charcoal", id: "prefectureSelect"} %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "性別を選択（メンバーが男性か女性どちらかのみの場合、選択してください）", class: "label-text" %>
            <div class="input-group">
              <%= f.select :sex, [["男性", 1], ["女性", 2]], { :prompt => "指定なし" }, { class: "custom-select text-charcoal", id: "sexSelect" } %>
            </div>
          </div>
          
          <%= f.submit "コミュニティを作成する", class: "btn btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "communities_new_resize.js" %>
