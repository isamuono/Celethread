<div class="top-wrapper">
  <div class="users-new-container">
    <h1 class="text-black text-center mt-auto">サイト名</h1>
    <h4 class="text-black text-center">アカウント作成</h4>
    <div class="row">
      <div class="mt-4 offset-xl-3 offset-lg-3 offset-md-3 offset-2 col-xl-6 col-lg-6 col-md-6 col-8">
        <%= form_for @user do |f| %>
          <div class="form-group form-row">
            <div class="col">
              <%= f.label "氏名", class: "label-text" %>
              <%= f.text_field :family_name, class: "form-control", id: "family_name", placeholder: "姓", autocomplete: "family-name" %>
              <div class="invalid-tooltip">
                氏名を入力してください
              </div>
            </div>
            <div class="col text-right">
              <%= f.label "※全て必須", class: "help-text" %> <%#この行は必要？？%>
              <%= f.text_field :first_name, class: "form-control", id: "first_name", placeholder: "名", autocomplete: "given-name" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "アカウント名（表示名）", class: "label-text" %>
            <%= f.text_field :accountName, class: "form-control", id: "accountName", placeholder: "アカウント名" %>
          </div>
          <div class="form-group">
            <%= f.label "メールアドレス", class: "label-text" %>
            <%= f.email_field :email, class: "form-control", id: "email", placeholder: "例：taro.yamada@gmail.com", autocomplete: "email" %>
          </div>
          <div class="form-group">
            <%= f.label "パスワード", class: "label-text" %>
            <%= f.password_field :password, class: "form-control", id: "password", placeholder: "半角英数字8～20文字", minlength: "８", maxlength: "20", pattern: "^[0-9A-Za-z]+$" %>
          </div>
          <div class="form-group">
            <%= f.label "パスワードの再入力", class: "label-text" %>
            <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation", placeholder: "パスワードの再入力", minlength: "8", maxlength: "20", pattern: "^[0-9A-Za-z]+$" %>
          </div>
          
          <%= f.submit "メール送信", class: "btn btn-block btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "users_new_resize.js" %>
